<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/background_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/article_margin"
        android:layout_marginEnd="@dimen/article_margin"
        android:layout_marginLeft="@dimen/article_margin"
        android:layout_marginRight="@dimen/article_margin"
        android:layout_marginStart="@dimen/article_margin"
        android:layout_marginTop="@dimen/article_margin"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/title_margin"
            android:layout_marginLeft="@dimen/title_margin"
            android:layout_marginRight="@dimen/title_margin"
            android:layout_marginStart="@dimen/title_margin"
            android:layout_marginTop="@dimen/article_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/article_title_pink"
            android:textSize="@dimen/title_text_size"
            tools:text="Long title of the article that can be over 2 lines" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/title_margin"
            android:layout_marginLeft="@dimen/title_margin"
            android:layout_marginRight="@dimen/title_margin"
            android:layout_marginStart="@dimen/title_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="start"
                android:padding="@dimen/tag_padding"
                android:textAllCaps="true"
                android:textColor="@color/travelTag"
                android:textSize="@dimen/tag_text_size"
                tools:text="Travel" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="@dimen/date_padding"
                android:textColor="@color/article_date_blue"
                android:textSize="@dimen/date_text_size"
                tools:text="Mar 6, 2010" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
